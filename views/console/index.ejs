<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <% include ../partials/head_includes.ejs %>
    <link rel="stylesheet" href="console.css">
    <title>SocketPE - Control Panel</title>
  </head>
  <body>

    <% include ../partials/nav.ejs %>
              
    <main>
      <div class="row">
        <div class="col">
            <h3 class="text-center mb-5">Console</h3>
            <hr />

            <button class="btn btn-dark ml-4 mr-5" id="serverStateChanger">Start server</button>
            <button class="btn btn-outline-dark" id="runCMD">Run command</button>
            <button class="btn btn-outline-dark mr-1" id="clearConsole">Clear console</button>
            <div id="console" class="bg-dark text-white m-4 pt-3">
                <div class="bg-light p-3" id="console-titlebar">
                  <div class="dot"></div>
                  <div class="dot"></div>
                  <div class="dot"></div>
                </div>
                <div id="console-output"></div>
            </div>
        </div>
        <div class="col">
          <h3 class="text-center mb-5">Function Packs</h3>
          <hr />
          <div id="packsContainer">
            <button id="uninstallAll" class="btn btn-dark ml-4">Uninstall All</button>
            <div id="installed-packs" class="row m-4">
              <div class="col-sm-1"></div>
              <div class="col loader-container text-center mt-5">
                  <div class="loader spinner-border text-dark mb-2"></div>
                  <div class="loader-label text-dark font-weight-bold">Detecting Installed Packs...</div>
              </div>
              <div class="col-sm-1"></div>
            </div>
          </div>
          <div class="row align-items-center">
  </div>
        </div>
      </div>
    </main>

    <% include ../partials/scripts.ejs  %>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@8"></script>
    <script src="//localhost/socket.io/socket.io.js"></script>
    <script src="console.js"></script>  
  </body>
</html>